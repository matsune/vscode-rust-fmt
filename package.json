{
	"name": "rust-fmt",
	"displayName": "rust-fmt",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Languages"
	],
	"activationEvents": [
		"onLanguage:rust"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "rust",
				"aliases": [
					"Rust"
				],
				"extensions": [
					".rs"
				]
			}
		],
		"configuration": {
			"title": "rust-fmt configuration",
			"type": "object",
			"properties": {
				"rust.rustfmtPath": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Specifies path to Rustfmt binary if it's not in PATH"
				},
				"rust.formatOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Turn on/off autoformatting file on save"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}